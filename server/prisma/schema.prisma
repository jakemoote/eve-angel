generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Session {
  id        String   @id
  sid       String   @unique
  data      String
  expiresAt DateTime @db.Timestamptz(6)
}

model User {
  id              String            @id @db.Uuid       @default(uuid())
  createdAt       DateTime          @db.Timestamptz(6) @default(now())
  updatedAt       DateTime          @db.Timestamptz(6) @updatedAt
  characters      Character[]
}

model Character {
  character_id  Int      @id
  user_id       String   @db.Uuid
  access_token  String
  refresh_token String   @db.VarChar(255)
  createdAt     DateTime @db.Timestamptz(6) @default(now())
  updatedAt     DateTime @db.Timestamptz(6) @updatedAt
  user          User     @relation(fields: [user_id], references: [id], onDelete: NoAction, onUpdate: NoAction)
  assets        Asset[]
}

model Asset {
  id            String   @id @db.Uuid @default(uuid())
  character_id  Int
  is_singleton  Boolean
  item_id       BigInt   @unique
  location_flag String   @db.VarChar(255)
  location_id   BigInt
  location_type String   @db.VarChar(255)
  quantity      Int
  type_id       Int
  createdAt     DateTime @db.Timestamptz(6) @default(now())
  updatedAt     DateTime @db.Timestamptz(6) @updatedAt
  character     Character @relation(fields: [character_id], references: [character_id], onDelete: NoAction, onUpdate: NoAction)
}
